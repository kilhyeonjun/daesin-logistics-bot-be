    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "iconv-lite": "^0.7.1",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/iconv-lite": "^0.0.1",
    "@types/node": "^25.0.3",
    "@types/node-cron": "^3.0.11",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
